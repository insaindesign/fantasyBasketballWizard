{
  "manifest_version": 2,
  "name": "Fantasy Basketball Wizard",
  "version": "2.2",
  "description": "Fantasy Basketball Wizard gives ESPN & Yahoo Fantasy Basketball players extra tools to help them succeed.",
  "browser_action": {
      "default_icon": "frontend/icon.png",
      "default_popup": "frontend/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://basketball.fantasysports.yahoo.com/nba/*"],
      "js": ["js/yahoo/teamPage.js"]
    },
    {
      "matches": ["http://games.espn.com/fba/*"],
      "js": ["js/jquery-3.2.1.min.js", "js/espn/espn.js"]
    },
    {
      "matches": ["https://basketball.fantasysports.yahoo.com/nba/*/research*"],
      "js": ["js/yahoo/researchPage.js"]
    },
    {
      "matches": ["https://basketball.fantasysports.yahoo.com/nba/*/buzzindex*"],
      "js": ["js/yahoo/transactionTrendsPage.js"]
    }
  ],
  "permissions": [
   "activeTab"
   ]
}
