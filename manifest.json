{
  "manifest_version": 2,
  "name": "Fantasy Basketball Wizard",
  "version": "2.3",
  "description": "Fantasy Basketball Wizard gives ESPN & Yahoo Fantasy Basketball players extra tools to help them succeed.",
  "browser_action": {
      "default_icon": "frontend/icon.png",
      "default_popup": "frontend/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://basketball.fantasysports.yahoo.com/nba/*"],
      "js": ["js/yahoo/teamPage.js"]
    },
    {
      "matches": ["http://fantasy.espn.com/basketball/addeddropped*"],
      "js": ["js/jquery-3.2.1.min.js", "js/espn/addedDroppedPage.js"]
    },
    {
      "matches": ["http://fantasy.espn.com/basketball/fantasycast?leagueId=*"],
      "js": ["js/jquery-3.2.1.min.js", "js/espn/matchupsPage.js"]
    },
    {
      "matches": ["http://fantasy.espn.com/basketball/team*"],
      "js": ["js/jquery-3.2.1.min.js", "js/espn/teamPage.js"]
    },
    {
      "matches": ["http://fantasy.espn.com/basketball/players/add*"],
      "js": ["js/jquery-3.2.1.min.js", "js/espn/playersPage.js"]
    },
    {
      "matches": ["https://basketball.fantasysports.yahoo.com/nba/*/research*"],
      "js": ["js/yahoo/researchPage.js"]
    },
    {
      "matches": ["https://basketball.fantasysports.yahoo.com/nba/*/buzzindex*"],
      "js": ["js/yahoo/transactionTrendsPage.js"]
    },
    {
      "matches": ["https://basketball.fantasysports.yahoo.com/nba/*/matchup*"],
      "js": ["js/yahoo/matchupsPage.js"]
    }
  ],
  "permissions": [
   "activeTab"
   ]
}
