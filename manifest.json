{
  "manifest_version": 2,
  "name": "Fantasy Basketball Wizard",
  "version": "1.2",
  "description": "Fantasy Basketball Wizard gives Yahoo Fantasy Basketball players extra tools to help them succeed.",
  "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://basketball.fantasysports.yahoo.com/nba/*"],
      "js": ["popup.js"]
    },
    {
      "matches": ["https://basketball.fantasysports.yahoo.com/nba/*/players"],
      "js": ["playersPage.js"]
    }
  ],
  "permissions": [
   "activeTab"
   ]
}
