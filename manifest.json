{
  "manifest_version": 2,
  "name": "Fantasy Basketball Wizard",
  "version": "1.3.1",
  "description": "Fantasy Basketball Wizard gives Yahoo Fantasy Basketball players extra tools to help them succeed.",
  "browser_action": {
      "default_icon": "frontend/icon.png",
      "default_popup": "frontend/popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": ["js/yahoo/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://basketball.fantasysports.yahoo.com/nba/*"],
      "js": ["js/yahoo/popup.js"]
    },
    {
      "matches": ["http://games.espn.com/fba/*"],
      "js": ["js/jquery-3.2.1.min.js", "js/espn/espn.js"]
    }
  ],
  "permissions": [
   "activeTab"
   ]
}
