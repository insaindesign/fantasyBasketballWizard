{
  "manifest_version": 2,
  "name": "Fantasy Basketball Helper",
  "version": "0.7",
  "description": "This extension gives Yahoo Fantasy Basketball players extra tools to help them succeed.",
  "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://basketball.fantasysports.yahoo.com/*"],
      "js": ["popup.js"]
    }
  ],
  "permissions": [
   "activeTab"
   ]
}
